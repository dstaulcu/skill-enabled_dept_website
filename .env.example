# =============================================================================
# AI-Enhanced Department Website - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# This file is shared across all services (host-site, frontend, backend)

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
HOST_SITE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# OpenAI-Compatible Model Service (Air-Gapped)
# -----------------------------------------------------------------------------
# Base URL for your internal OpenAI-compatible API
OPENAI_BASE_URL=http://your-internal-ai-service:8080/v1

# API Key for authentication (if required by your service)
OPENAI_API_KEY=your-api-key-here

# Model name to use (adjust based on your deployed model)
OPENAI_MODEL=gpt-4

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Environment mode: development | production
ENVIRONMENT=development

# JWT secret for token signing (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Session timeout (hours)
SESSION_TIMEOUT_HOURS=8

# -----------------------------------------------------------------------------
# Development Mock Settings
# -----------------------------------------------------------------------------
# Default mock user for development (used when no X-Mock-User header provided)
DEFAULT_MOCK_USER=john.doe@dept.gov

# Mock OpenAI service URL (if using local mock instead of real service)
MOCK_OPENAI_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite database path (relative to backend/)
DATABASE_URL=sqlite:///./db/dept_website.db

# Chat history retention (days, 0 = session-only, -1 = indefinite)
CHAT_HISTORY_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# RAG / Vector Store Configuration
# -----------------------------------------------------------------------------
# Path to FAISS index files
FAISS_INDEX_PATH=./db/faiss_index

# Chunk size for document processing
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
# Jira mock/real server
JIRA_BASE_URL=http://localhost:8002
JIRA_API_TOKEN=mock-jira-token

# Confluence mock/real server
CONFLUENCE_BASE_URL=http://localhost:8003
CONFLUENCE_API_TOKEN=mock-confluence-token

# SharePoint mock/real server
SHAREPOINT_BASE_URL=http://localhost:8004
SHAREPOINT_API_TOKEN=mock-sharepoint-token

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
